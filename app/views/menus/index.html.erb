
<h1>Menu for <%= DateTime.now.strftime('%d %B %Y')%></h1>

<table>
  <thead>
    <tr>
    <th>Date</th>
      <th>Title</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.date %></td>
      <td><%= menu.title %></td>
      <td><%= menu.restaurant.name %></td>

      <td><%= link_to 'Show dishes', dishes_path(menu_id: menu.id) %></td>
      <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
      <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Menu', new_menu_path %>||
<%= link_to 'New Restaurant', new_restaurant_path %>||
<%= link_to 'New Dish', new_dish_path %>||
<%= link_to 'New Order', new_order_path %>
<% end %>
