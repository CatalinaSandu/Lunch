
<h1>Listing Menus</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>First dish</th>
      <th>Second dish</th>
      <th>Dessert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.date %></td>
      <td><%= menu.title %></td>
      <td><%= menu.first_dish %></td>
      <td><%= menu.second_dish %></td>
      <td><%= menu.dessert %></td>
      <td><%= link_to 'Show', menu %></td>
      <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
      <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Menu', new_menu_path %>
<% end %>
