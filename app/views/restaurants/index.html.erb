<div class="container">
<h1>Listing Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= link_to 'Show', restaurant, class: "btn btn-default btn-sm" %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-default btn-sm"%></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-default" %>
<% end %>
<%= link_to 'Menus', menus_path, class: "btn btn-default"%>
</div>
