<div class="container">
<h1>Listing Dishes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Dish type</th>
      <th>Dish title</th>
      <th>Menu</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
    <tr>
      <td class="round-image-50"><%= image_tag(dish.picture.url(:thumb)) %></td>
      <td><%= dish.dish_type %></td>
      <td><%= dish.dish_title %></td>
      <td><%= dish.menu.title %></td>
      <td><%= link_to 'Show', dish %></td>
      <% if current_user.admin? %>
      <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
      <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Dish', new_dish_path, class: "btn btn-default" %>
<% end %>
<%= link_to 'Menus', menus_path, class: "btn btn-default" %>
</div>
